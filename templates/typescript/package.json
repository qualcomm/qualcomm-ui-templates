{
  "name": "qui-typescript-template",
  "private": true,
  "type": "module",
  "types": "./dist/stub.d.ts",
  "exports": {
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js",
      "default": "./dist/*/index.js"
    }
  },
  "scripts": {
    "clean": "shx rm -rf dist build",
    "dev": "run-p watch:js watch:ts",
    "build": "run-s clean build:js build:ts",
    "build:js": "tsx build.ts",
    "build:ts": "tsc -b tsconfig.lib.json",
    "watch:js": "tsx build.ts --watch",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput",
    "lint": "eslint --quiet"
  },
  "dependencies": {
    "@qualcomm-ui/utils": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@qualcomm-ui/esbuild": "^1.0.4",
    "@qualcomm-ui/eslint-config-typescript": "^1.1.0",
    "@qualcomm-ui/tsconfig": "^1.0.4",
    "@types/node": "^24",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "npm-run-all2": "^8.0.4",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "~7.2.6",
    "vite-tsconfig-paths": "~5.1.4",
    "vitest": "^4.0.16"
  }
}
