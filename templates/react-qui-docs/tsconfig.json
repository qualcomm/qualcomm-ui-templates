{
  "extends": "@qualcomm-ui/tsconfig/tsconfig.react-docs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "module": "nodenext",
    "paths": {
      "~assets/*": ["./src/assets/*"],
      "~components/*": ["./src/components/*"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src/**/*.mdx"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
  ]
}
